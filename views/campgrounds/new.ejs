<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<div class="container">
    <h1>Create a New Campground</h1>
    <hr>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" class="form-control" id="" aria-describedby="emailHelp"
                placeholder="Name" name="Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" class="form-control" id="" aria-describedby="emailHelp"
                   placeholder="Price" name="Price" min="0.0" step="0.01">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" class="form-control" id="" aria-describedby="emailHelp"
                placeholder="Image Url" name="Image">
        </div>
        <button class="btn btn-lg btn-primary" type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%- include("../partials/footer") %>
</div>