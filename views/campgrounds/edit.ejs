<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<div class="container">
    <h1>Edit <%=campground.name%></h1>
    <hr>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" class="form-control" id="" aria-describedby="emailHelp"
                   value="<%=campground.name%>" name="campground[name]">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" class="form-control" id="" aria-describedby="emailHelp"
                   value="<%=campground.price%>" name="campground[Price]" min="0.0" step="0.01">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" class="form-control" id="" aria-describedby="emailHelp"
                   value="<%=campground.image%>" name="campground[image]">
        </div>
        <button class="btn btn-lg btn-primary" type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%- include("../partials/footer") %>
</div>